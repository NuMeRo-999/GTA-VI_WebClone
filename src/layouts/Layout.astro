---
import KeepScrollingIcon from "@/assets/keep-scrolling.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/global.css" />
    <title>GTA VI Web Clone</title>
  </head>
  <body>
    <slot />
    <KeepScrollingIcon
      class="size-[34px] fixed bottom-0 right-0 left-0 mx-auto animate-bounce-scale text-[#ffb0c4] drop-shadow-2xl"
      style="animation: bounceScale 2s infinite ease-in-out; filter: drop-shadow(0 25px 25px black);"
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
